{
    "name": "zfcampus/zf-content-negotiation",
    "description": "ZF2 Module providing content-negotiation features",
    "type": "library",
    "license": "BSD-3-Clause",
    "keywords": [
        "zf2",
        "zend",
        "module",
        "content-negotiation"
    ],
    "homepage": "http://apigility.org/",
    "support": {
        "email": "apigility-users@zend.com",
        "irc": "irc://irc.freenode.net/apigility",
        "source": "https://github.com/zfcampus/zf-content-negotiation",
        "issues": "https://github.com/zfcampus/zf-content-negotiation/issues"
    },
    "repositories": [
        { "type": "composer", "url": "https://packages.zendframework.com" },
        {
            "type": "vcs",
            "url": "https://github.com/astepin/zf-api-problem"
        },
        {
            "type": "vcs",
            "url": "https://github.com/astepin/zf-hal"
        }
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "1.1-dev",
            "dev-develop": "1.2-dev"
        }
    },
    "require": {
        "php": "^5.6 || ^7.0",
        "zendframework/zend-eventmanager": "^3.0",
        "zendframework/zend-filter": "^2.7",
        "zendframework/zend-http": "^2.5",
        "zendframework/zend-console": "^2.6",
        "zendframework/zend-json": "^3.0",
        "zendframework/zend-mvc": "^3.0",
        "zendframework/zend-servicemanager": "^3.1",
        "zendframework/zend-stdlib": "^3.0",
        "zendframework/zend-validator": "^2.8",
        "zendframework/zend-view": "^2.8",
        "zfcampus/zf-api-problem": "dev-master"
    },
    "require-dev": {
        "phpunit/PHPUnit": "^4.8",
        "squizlabs/php_codesniffer": "^2.3.1",
        "zendframework/zend-loader": "^2.5",
        "zfcampus/zf-hal": "dev-master"
    },
    "suggest": {
        "zendframework/zend-console": "^2.3, if you intend to use the RequestFactory"
    },
    "autoload": {
        "psr-4": {
            "ZF\\ContentNegotiation\\": "src/"
        },
        "classmap": [
            "Module.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "ZFTest\\ContentNegotiation\\": "test/"
        }
    }
}
